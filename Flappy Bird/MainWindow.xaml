<Window x:Class="Flappy_Bird.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Flappy_Bird"
        mc:Ignorable="d"
        Title="Flappy Bird" Height="490" Width="525">
    <Canvas Name="MyCanvas" Focusable="True" KeyDown="KeyIsDown" KeyUp="KeyIsUp" Background="LightBlue">

        <Image Height="145" Width="200" Source="Images/clouds.png" Canvas.Left="20" Canvas.Top="10" Tag="cloud"/>
        <Image Height="145" Width="200" Source="/Images/clouds2.png" Canvas.Left="300" Canvas.Top="96" Tag="cloud"/>

        <Image Height="390" Width="66" Source="Images/pipeBottom.png" Canvas.Left="107" Canvas.Top="283" Tag="obs1" />
        <Image Height="390" Width="66" Source="Images/pipeTop.png" Canvas.Left="107" Canvas.Top="-254" Tag="obs1" />

        <Image Height="390" Width="66" Source="Images/pipeBottom.png" Canvas.Left="280" Canvas.Top="327" Tag="obs2" />
        <Image Height="390" Width="66" Source="Images/pipeTop.png" Canvas.Left="280" Canvas.Top="-182" Tag="obs2" />

        <Image Height="390" Width="66" Source="Images/pipeBottom.png" Canvas.Left="451" Canvas.Top="224" Tag="obs3" />
        <Image Height="390" Width="66" Source="Images/pipeTop.png" Canvas.Left="451" Canvas.Top="-281" Tag="obs3" />

        <Label Content="Score: 0" FontSize="20" FontWeight="Bold" Canvas.Left="10" Canvas.Top="10" Name="txtScore"/>
        

        <Image Stretch="Fill" Height="37" Width="50" Source="Images/flappyBird.png" Canvas.Left="20" Canvas.Top="190" Name="flappyBird"/> 
    </Canvas>
</Window>
